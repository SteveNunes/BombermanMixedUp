   </padding>
   <children>
      <ScrollPane VBox.vgrow="ALWAYS">
         <content>
            <GridPane hgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Layer" />
                              <ListView fx:id="listViewLayers" prefWidth="50.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="30.0">
                                 <children>
                                    <CheckBox fx:id="checkBoxShowGrid" mnemonicParsing="false" text="Exibir grade" />
