                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chão" />
                                    <Button fx:id="buttonSetFrameSetGroundSprite" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Definir como bloco selecionado" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Canvas fx:id="canvasGroundWithBrickShadow" height="48.0" width="48.0" />
                              <VBox spacing="5.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chão com sombra de tijolo" />
                                    <Button fx:id="buttonSetFrameSetGroundWithBrickShadow" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Definir como bloco selecionado" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Canvas fx:id="canvasFragileGround" height="48.0" width="48.0" />
                              <VBox spacing="5.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chão frágil" />
                                    <Button fx:id="buttonSetFrameSetGroundWithWallShadow" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Definir como bloco selecionado" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
