                                       <children>
                                          <Button fx:id="buttonPlay" mnemonicParsing="false" prefWidth="32.0" />
                                          <ComboBox fx:id="comboBoxMapFrameSets" prefWidth="150.0" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <Canvas fx:id="canvasMain" height="720.0" width="960.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox spacing="20.0" GridPane.columnIndex="1">
                     <children>
                        <VBox spacing="3.0">
                           <children>
                              <VBox spacing="10.0">
                                 <children>
                                    <Canvas fx:id="canvasTileSet" height="120.0" width="160.0" />
                                 </children>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </VBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Canvas fx:id="canvasBrickStand" height="48.0" width="48.0" />
                              <VBox spacing="5.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bloco intacto" />
                                    <Button fx:id="buttonSetFrameSetBrickStand" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Definir Frameset da animaćão" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Canvas fx:id="canvasBrickBreaking" height="48.0" width="48.0" />
