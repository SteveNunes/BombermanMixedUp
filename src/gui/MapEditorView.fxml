                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bloco de parede (Cai no Hurry Up!)" />
                                    <Button fx:id="buttonSetFrameSetWallSprite" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Definir como bloco selecionado" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Canvas fx:id="canvasGroundSprite" height="48.0" width="48.0" />
