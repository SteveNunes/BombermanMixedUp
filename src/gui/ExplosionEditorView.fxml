<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ExplosionEditor">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Canvas fx:id="canvasMain" height="240.0" width="384.0" />
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <VBox alignment="TOP_CENTER" maxWidth="30.0" minWidth="30.0" prefWidth="30.0">
                     <children>
                        <Text fx:id="textColorPorcent1" strokeType="OUTSIDE" strokeWidth="0.0" text="0" />
                        <Slider fx:id="sliderColorPorcent1" blockIncrement="0.05" max="1.0" orientation="VERTICAL" value="1.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" spacing="2.0">
                     <children>
                        <RadioButton fx:id="radioRed1" mnemonicParsing="false" selected="true" text="Red">
                           <toggleGroup>
                              <ToggleGroup fx:id="groupColors1" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioGreen1" mnemonicParsing="false" text="Green" toggleGroup="$groupColors1" />
                        <RadioButton fx:id="radioBlue1" mnemonicParsing="false" text="Blue" toggleGroup="$groupColors1" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <VBox alignment="TOP_CENTER" maxWidth="30.0" minWidth="30.0" prefWidth="30.0">
                     <children>
                        <Text fx:id="textColorPorcent2" strokeType="OUTSIDE" strokeWidth="0.0" text="0" />
                        <Slider fx:id="sliderColorPorcent2" blockIncrement="0.05" max="1.0" orientation="VERTICAL" value="1.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" spacing="2.0">
                     <children>
                        <RadioButton fx:id="radioRed2" mnemonicParsing="false" text="Red">
                           <toggleGroup>
                              <ToggleGroup fx:id="groupColors2" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioGreen2" mnemonicParsing="false" selected="true" text="Green" toggleGroup="$groupColors2" />
                        <RadioButton fx:id="radioBlue2" mnemonicParsing="false" text="Blue" toggleGroup="$groupColors2" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <VBox alignment="TOP_CENTER" maxWidth="30.0" minWidth="30.0" prefWidth="30.0">
                     <children>
                        <Text fx:id="textColorPorcent3" strokeType="OUTSIDE" strokeWidth="0.0" text="0" />
                        <Slider fx:id="sliderColorPorcent3" blockIncrement="0.05" max="1.0" orientation="VERTICAL" value="1.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" spacing="2.0">
                     <children>
                        <RadioButton fx:id="radioRed3" mnemonicParsing="false" text="Red">
                           <toggleGroup>
                              <ToggleGroup fx:id="groupColors3" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioGreen3" mnemonicParsing="false" text="Green" toggleGroup="$groupColors3" />
                        <RadioButton fx:id="radioBlue3" mnemonicParsing="false" selected="true" text="Blue" toggleGroup="$groupColors3" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Button fx:id="buttonPrint" mnemonicParsing="false" text="Print" />
                  <Button fx:id="buttonLoad" mnemonicParsing="false" text="Load" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
